<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cgpadetails"
    android:background="#b0e0e6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="144dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="CGPA DETAILS"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="Semester 1"
                android:textSize="25dp"></TextView>

            <EditText
                android:id="@+id/e1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:hint="enter 1st sem cgpa"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="Semester 2"
                android:textSize="25dp"></TextView>

            <EditText
               android:id="@+id/e2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:hint="enter 2nd sem cgpa"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="Semester 3"
                android:textSize="25dp"></TextView>

            <EditText
                android:id="@+id/e3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:hint="enter 3rd sem cgpa"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="Semester 4"
                android:textSize="25dp"></TextView>

            <EditText
               android:id="@+id/e4"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:hint="enter 4th sem cgpa"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="Semester 5"
                android:textSize="25dp"></TextView>

            <EditText
                android:id="@+id/e5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:hint="enter 5th sem cgpa"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="Semester 6"
                android:textSize="25dp"></TextView>

            <EditText
               android:id="@+id/e6"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:hint="enter 6th sem cgpa"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="Semester 7"
                android:textSize="25dp"></TextView>

            <EditText

                android:id="@+id/e7"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:hint="enter 7th sem cgpa"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="Semester 8"
                android:textSize="25dp"></TextView>

            <EditText
                android:id="@+id/e8"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:hint="enter 8th sem cgpa"></EditText>

            <Button
               android:id="@+id/butt1"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:text="Submit"
                android:textSize="25dp"
                android:backgroundTint="@color/teal_700"></Button>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>